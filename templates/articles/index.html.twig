{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

{% for article in articles %}
    <h2> {{ article.title }}</h2>
    <p>{{ article.content|striptags|u.truncate(200) }}</p>
    <a href="{{ path('article', {'id' : article.id}) }}"> Lire</a>
{% endfor %}
{{ knp_pagination_render(articles) }}
{% endblock %}
