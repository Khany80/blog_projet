{% extends 'base.html.twig' %}

{% block title %}Articles
{% endblock %}

{% block body %}

{% if articlesTag is empty %}
    <p>Désolée il n'y a pas encore eu d'article la dessus :(</p>
{% else %}
    {% for article in articlesTag %}
		<h2>
			{{ article.title }}</h2>
		<p>{{ article.content|striptags|u.truncate(200) }}</p>
		<a href="{{ path('article', {'id' : article.id}) }}">
			Lire</a>
	{% endfor %}
	{{ knp_pagination_render(articlesTag) }}
{% endif %}

	
{% endblock %}
